    "geo:validate-schema": "tsx scripts/validate-schema.ts",
    "geo:validate-language": "tsx scripts/validate-language-metadata.ts",
    "geo:check-multilingual-parity": "tsx scripts/check-multilingual-parity.ts",
    "geo:check": "tsx scripts/geo-check.ts",
    "create-article": "tsx scripts/create-article.ts",
    "ai-create-article": "tsx scripts/ai-create-article.ts",
    "ai-create-article-v2": "tsx scripts/ai-create-article-v2.ts",
    "validate:pre-build": "tsx scripts/pre-build-validation.ts",
    "validate:pre-build:strict": "tsx scripts/pre-build-validation.ts -- --strict",
    "validate:all": "npm run geo:check && npm run geo:check-multilingual-parity && npm run geo:validate-schema",
    "validate-schema": "tsx scripts/validate-schema.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "framer-motion": "10.16.16",
    "lucide-react": "0.294.0",
    "next": "14.0.4",
