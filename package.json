{
  "name": "keentropy-tech-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3108",
    "build": "npm run validate:pre-build && next build",
    "build:skip-validation": "next build",
    "start": "next start -p 3108",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:properties": "jest __tests__/properties",
